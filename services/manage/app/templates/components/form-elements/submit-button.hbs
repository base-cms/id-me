{{#form-elements/button
  id=id
  class=class
  form=form
  type="submit"
  disabled=_disabled
}}
  {{#if isSaving}}
    {{entypo-icon "hour-glass" class="d-inline-block spin mr-1"}} {{onSavingLabel}}
  {{else}}
    {{#if icon}}{{entypo-icon icon class="mr-1"}} {{/if}}{{label}}
  {{/if}}
{{/form-elements/button}}
